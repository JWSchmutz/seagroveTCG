                <tbody>
                    {{#each creator}}
                    <tr role="row">
                        <th>{{name}}</th>
                        <th>{{store}}</th>
                        <th>{{discount}}</th>
                        <th onclick='copyDiscountCode("{{code}}")'>{{code}} </th>
                        <th><a class="store-link" href='{{link}}'>{{store}}</a></th>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr>
                        <th>Company</th>
                        <th>Player</th>
                        <th>Discount</th>
                        <th>Code</th>
                        <th>Link</th>
                    </tr>
                </tfoot>

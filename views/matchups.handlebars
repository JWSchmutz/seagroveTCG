<div class="container my-5">
    <div class="row">
        <div class="col-sm-1 col-md-2"></div>
        <div class="col-sm-10 col-md-8">
            <div class="card">
                <h5 class="card-header info-color white-text text-center py-4">
                    <strong>Click on the Favored Deck.</strong>
                </h5>
                <div class="card-body px-lg-5 pt-0">
                    {{#each matchup}}
                    <div class="matchup">
                        <h1 class="text-center">{{deck1}} vs {{deck2}}</h1>
                        <div class="d-none" id="pokemon-1-{{id}}">{{pokemon1}}</div>
                        <div class="d-none" id="pokemon-2-{{id}}">{{pokemon2}}</div>
                        <div class="row">
                            <div class="col-sm-1 col-md-2 col-lg-3"></div>
                            <div class="col-6 col-sm-5 col-md-4 col-lg-3">{{pokemon1}}</div>
                            <div class="col-6 col-sm-5 col-md-4 col-lg-3">{{pokemon2}}</div>
                            <div class="col-sm-1 col-md-2 col-lg-3"></div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <button class="btn ml-0 btn-info btn-rounded btn-block z-depth-0 my-4 waves-effect"
                                    type="submit" id="cup-submit">{{deck1}}</button>
                            </div>
                            <div class="col-4">
                                <button class="btn ml-0 btn-info btn-rounded btn-block z-depth-0 my-4 waves-effect"
                                    type="submit" id="cup-submit">Basically 50-50</button>
                            </div>
                            <div class="col-4">
                                <button class="btn ml-0 btn-info btn-rounded btn-block z-depth-0 my-4 waves-effect"
                                    type="submit" id="cup-submit">{{deck2}}</button>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>

            </div>
        </div>
        <div class="col-sm-1 col-md-2"></div>
    </div>
</div>